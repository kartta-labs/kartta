{
  "version":8,
  "sprite":"{{ APP_HOME_URL }}/antique_assets/sprites",
  "glyphs":"{{ APP_HOME_URL }}/fonts/{fontstack}/{range}.pbf",
  "sources":{
    "antique":{
      "type":"vector",
      "url":"{{ MBGL_TILESERVER_ANTIQUE_JSON }}"
    }
  },
  "layers":[
    {
      "paint":{"background-pattern":"background"},
      "id":"background",
      "source":"antique",
      "source-layer":"background",
      "type":"background"
    },
    {
      "paint":{"fill-color":"#aecad0"},
      "id":"ocean",
      "source":"antique",
      "source-layer":"ocean",
      "type":"fill"
    },
    {
      "paint":{"line-color":"#aecad0","line-width":{"stops":[[14,1],[21,3]]}},
      "id":"water_line",
      "source":"antique",
      "source-layer":"water_line",
      "type":"line"
    },
    {
      "paint":{"line-color":"#777777","line-width":{"stops":[[14,1],[21,3]]}},
      "id":"country_lines",
      "source":"antique",
      "source-layer":"country_lines",
      "type":"line"
    },
    {
      "paint":{"line-color":"#aeada9","line-width":{"stops":[[14,1],[21,3]]}},
      "id":"state_lines",
      "source":"antique",
      "source-layer":"state_lines",
      "type":"line"
    },
    {
      "paint":{"fill-color":"#aecad0"},
      "id":"lakes",
      "source":"antique",
      "source-layer":"lakes",
      "type":"fill"
    },
    {
      "paint":{"line-color":"#9bd2f8"},
      "id":"global_rivers",
      "source":"antique",
      "source-layer":"global_rivers",
      "type":"line"
    },
    {
      "paint":{
        "fill-pattern":"stripes",
        "fill-opacity":0.3,
        "fill-outline-color":"#777777"
      },
      "id":"landuse",
      "source":"antique",
      "source-layer":"landuse",
      "type":"fill",
      "filter": ["in", ["get", "type"], ["literal", ["type","playground","park"]]]
    },
    {
      "paint":{"line-color":"#aaaaaa","line-width":2,"line-dasharray":[3,3]},
      "id":"minor_roads",
      "source":"antique",
      "source-layer":"minor_roads",
      "type":"line",
      "minzoom":16,
      "maxzoom":20
    },
    {
      "paint":{"line-color":"#444444","line-width":{"stops":[[14,6],[19,29]]}},
      "source-layer":"roads",
      "id":"roads_casing_major",
      "source":"antique",
      "type":"line",
      "filter": ["in", ["get", "type"], ["literal", ["motorway","trunk","primary","secondary"]]],
      "minzoom":14,
      "maxzoom":21
    },
    {
      "paint":{"line-color":"#444444","line-width":{"stops":[[14,4],[19,24]]}},
      "source-layer":"roads",
      "id":"roads_casing_mid",
      "source":"antique",
      "type":"line",
      "filter": [ "match", ["get", "type"], ["trunk","primary","secondary" ],false,true  ],
      "minzoom":14,
      "maxzoom":21
    },
    {
      "paint":{"line-color":"#e8e0c8","line-width":{"stops":[[14,5],[19,28]]}},
      "id":"roads_centre_major",
      "ref":"roads_casing_major"
    },
    {
      "paint":{"line-color":"#e8e0c8","line-width":{"stops":[[14,3],[19,23]]}},
      "id":"roads_centre_mid",
      "ref":"roads_casing_mid"
    },
    {
      "paint":{"fill-opacity":0.7,
        "fill-color": [
          "match",
          ["get", "type"], 
          ["shop","bank","marketplace","gallery","hotel"],
          "#d9cb48",
          ["church","place_of_worship"],
          "#7ea0a9",
          ["school","library"],
          "#d67888",
          ["factory","saw_mill"],
          "#b7af9c",
          "#d0c0a8"
          ]
      
      },
      "id":"buildings",
      "source":"antique",
      "source-layer":"buildings",
      "type":"fill",
      "minzoom":14,
      "maxzoom":21
    },

    {
      "paint":{"line-color":"#aaaaaa","line-width":{"stops":[[15,0.5],[21,1.5]]}},
      "source-layer":"buildings",
      "id":"buildings_outline",
      "source":"antique",
      "type":"line",
      "minzoom":15,
      "maxzoom":21
    },
    {
      "layout":{
        "text-field":"{name}",
        "text-font":["Josefin Sans Italic"],
        "text-size":14,
        "text-max-width":6
      },
      "paint":{"text-halo-color":"#e8e0c8","text-halo-width":1,"text-color":"#444444"},
      "source-layer":"buildings",
      "id":"building_names",
      "source":"antique",
      "type":"symbol",
      "minzoom":16,
      "maxzoom":21
    },
    {
      "layout":{"text-field":"{name}","text-font":["Josefin Sans Semi Bold Italic"]},
      "paint":{"text-halo-color":"#e8e0c8","text-halo-width":1},
      "source-layer":"buildings",
      "id":"building_names__1",
      "source":"antique",
      "type":"symbol",
      "filter":["in", ["get", "type"], ["literal", ["shop","bank","marketplace","gallery","hotel", "church", "place_of_worship", "school", "library"]]],
      "minzoom":16,
      "maxzoom":21
    },
    {
      "layout":{
        "text-font":["PT Sans Regular"],
        "symbol-placement":"line-center",
        "text-field":"{name}",

        "text-rotation-alignment": "map",
        "text-letter-spacing":0.2,
        "text-offset":[0,0],
        "text-keep-upright":true,
        "text-size":{"stops":[[14,10],[19,22]]}
      },
      "paint":{"text-color":"#444444","text-halo-color":"#e8e0c8","text-halo-width":2},
      "id":"road_names",
      "source":"antique",
      "source-layer":"road_names",
      "type":"symbol",
      "minzoom":14,
      "maxzoom":21
    },
    {
      "layout":{
        "text-field":"{name}",
        "text-font":["Josefin Sans Regular"],
        "text-size":18,
        "text-max-width":10,
        "text-letter-spacing":0.2,
        "text-line-height":1.2
      },
      "paint":{"text-halo-color":"#e8e0c8","text-halo-width":1,"text-color":"#444444"},
      "id":"places",
      "source":"antique",
      "source-layer":"places",
      "type":"symbol"
    }
  ]
}
